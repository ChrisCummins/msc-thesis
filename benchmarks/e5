#!/usr/bin/env python2.7
#
# e5
#
from benchlib import *
import resultscache

hosts = [Host("florence"),
         Host("dhcp-90-060", gpus=["NVIDIA GTX 690"]),
         Host("whz1", gpus=["NVIDIA GTX TITAN"]),
         Host("tim", gpus=["NVIDIA GTX 590", "NVIDIA GTX 590"]),
         Host("monza", gpus=["AMD Tahiti 7970", "AMD Tahiti 7970"])]

benchmark = SkelCLBenchmark("DotProduct")
test = TestCase(benchmark)
sampler = FixedSizeSampler(10)
harness = TestHarness(hosts[0], test, sampler)

harness.run()

print("Done. results:")
for r in harness.results():
    print(r)
