#!/usr/bin/env python2

import labm8
from labm8 import fs
from labm8 import io

import omnitune
from omnitune import skelcl

import experiment

def mkoracle(path):
    fs.rm(path)
    oracle = skelcl.SkelCLDatabase(path)

    for path in experiment.DATABASES:
        if fs.isfile(path):
            io.info("EXPORT  ", path)
            db = skelcl.SkelCLDatabase(path)
            oracle.merge(db)
        else:
            io.info("Skipping", path)

def main():
    mkoracle(fs.path(experiment.DATABASE_ROOT, "omnitune.oracle.db"))

if __name__ == "__main__":
    main()
